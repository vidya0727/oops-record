#include <iostream> 
using namespace std;
class Book
{ 
public:
string title; 
string author;
float price;
void display()
{
 
        cout << "Title: " << title
             << ", Author: " << author
             << ", Price: Rs." << price << endl;
}
};
int main() {
     Book b1, b2;

b1.title = "C++ Programming"; b1.author = "Bjarne Stroustrup"; b1.price = 750.50;
b2.title = "Data Structures"; b2.author = "Mark Allen Weiss"; b2.price = 600.75;

b1.display();
b2.display();
return 0;
}

Output:
Title: C++ Programming, Author: Bjarne Stroustrup, Price: Rs.750.5 
Title: Data Structures, Author: Mark Allen Weiss, Price: Rs.600.75
